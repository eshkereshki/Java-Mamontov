import java.util.Scanner;


public class Main {
    public static void main(String[] args) {

        Test t = new Test();

        Scanner scanner = new Scanner(System.in);

        try { //1.1

            System.out.print("Введите вещественное число: ");
            double number = scanner.nextDouble();

            if (number % 1 == 0) {
                System.out.println("Введите вещественное число !");
            } else {
                double result = t.fraction(number);
                System.out.println("Дробная часть числа " + number + " = " + result);
            }
        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }


        try { // 1.3
            System.out.print("Введите число от 0 до 9 : ");

            int x = scanner.nextInt();
            char charDigit = (char) (x + '0');

            if (!(x >= 0 && x <= 9)) {

                System.out.println("Число должно быть от 0 до 9!");

            } else {

                int result = t.charToNum(charDigit);

                System.out.println("Результат " + result);

            }

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 1.5

            System.out.println("Введите число : ");


            int x = scanner.nextInt();


            if (x < 10 || x > 99) {

                System.out.println("false");

            } else {

                boolean result = t.is2Digits(x);

                System.out.println(result);
            }


        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 1.7

            System.out.println("Введите первое число (a)");
            int a = scanner.nextInt();

            System.out.println("Введите второе число (b)");
            int b = scanner.nextInt();

            System.out.println("Введите проверяемое число(num)");
            int num = scanner.nextInt();

            boolean result = t.isInRange(a, b, num);


            if (a > num || b < num) {
                System.out.println(result);
            }

            if (a < num || b > num) {
                System.out.println(result);
            }

            if (a == num || b == num) {
                System.out.println(result);
            }


        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 1.9
            System.out.println("Введите первое число (a)");
            int a = scanner.nextInt();

            System.out.println("Введите второе число (b)");
            int b = scanner.nextInt();

            System.out.println("Введите проверяемое число(с)");
            int с = scanner.nextInt();

            boolean result = t.isEqual(a, b, с);

            if (a > с || b < с) {
                System.out.println(result);
            }

            if (a < с || b > с) {
                System.out.println(result);
            }

            if (a == с || b == с) {
                System.out.println(result);
            }


        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 2.1
            System.out.print("Введите целое число: ");
            int x = scanner.nextInt();

            int result = t.abs(x);
            System.out.println("Модуль числа " + x + " = " + result);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 2.3
            System.out.print("Введите целое число: ");
            int x = scanner.nextInt();

            boolean result = t.is35(x);
            System.out.println("Результат для числа " + x + ": " + result);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 2.5
            System.out.print("Введите первое число: ");
            int x = scanner.nextInt();

            System.out.print("Введите второе число: ");
            int y = scanner.nextInt();

            System.out.print("Введите третье число: ");
            int z = scanner.nextInt();

            int result = t.max3(x, y, z);
            System.out.println("Максимальное число: " + result);
        }catch (Exception e) {
            System.out.println("Ошибка! Введите целые числа.");
        }

        try { // 2.7
            System.out.print("Введите первое число: ");
            int x = scanner.nextInt();

            System.out.print("Введите второе число: ");
            int y = scanner.nextInt();

            int result = t.sum2(x, y);
            System.out.println("Результат: " + result);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целые числа.");
        }

        try { // 2.9
            System.out.print("Введите номер дня недели (1-7): ");
            int dayNumber = scanner.nextInt();

            String result = t.day(dayNumber);
            System.out.println("Результат: " + result);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 3.1
            System.out.print("Введите число x: ");
            int x = scanner.nextInt();

            String result = t.listNums(x);
            System.out.println("Результат: " + result);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 3.3
            System.out.print("Введите число x: ");
            int x = scanner.nextInt();

            String result = t.chet(x);
            System.out.println("Четные числа: " + result);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 3.5
            System.out.print("Введите число: ");
            long number = scanner.nextLong();

            int length = t.numLen(number);
            System.out.println("Количество цифр: " + length);

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 3.7
            System.out.print("Введите размер квадрата: ");
            int size = scanner.nextInt();

            if (size > 0) {
                t.square(size);
            } else {
                System.out.println("Размер должен быть положительным числом!");
            }

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 3.9
            System.out.print("Введите высоту треугольника: ");
            int height = scanner.nextInt();

            if (height > 0) {
                t.rightTriangle(height);
            } else {
                System.out.println("Высота должна быть положительным числом!");
            }

        } catch (Exception e) {
            System.out.println("Ошибка! Введите целое число.");
        }

        try { // 4.1
            
            System.out.print("Введите размер массива: ");
            int size = scanner.nextInt();
            int[] arr = new int[size];

            System.out.println("Введите элементы массива:");
            for (int i = 0; i < size; i++) {
                System.out.print("Элемент " + (i + 1) + ": ");
                arr[i] = scanner.nextInt();
            }

            System.out.print("Введите число для поиска: ");
            int x = scanner.nextInt();
       
            int result = t.findFirst(arr, x);
            if (result != -1) {
                System.out.println("Первое вхождение на позиции: " + result);
            } else {
                System.out.println("Число не найдено в массиве");
            }

        } catch (Exception e) {
            System.out.println("Ошибка ввода!");
        }

        try { // 4.3
            
            System.out.print("Введите размер массива: ");
            int size = scanner.nextInt();

            if (size <= 0) {
                System.out.println("Размер массива должен быть положительным числом!");
                return;
            }
            
            int[] arr = new int[size];
            System.out.println("Введите элементы массива:");
            for (int i = 0; i < size; i++) {
                System.out.print("Элемент " + (i + 1) + ": ");
                arr[i] = scanner.nextInt();
            }
            
            int result = t.maxAbs(arr);
            System.out.println("Наибольшее по модулю значение: " + result);

        } catch (Exception e) {
            System.out.println("Ошибка ввода! Пожалуйста, введите целые числа.");
        }

        try { // 4.5
            
            System.out.print("Введите размер первого массива: ");
            int size1 = scanner.nextInt();
            int[] arr = new int[size1];
            System.out.println("Введите элементы первого массива:");
            for (int i = 0; i < size1; i++) {
                System.out.print("Элемент " + (i + 1) + ": ");
                arr[i] = scanner.nextInt();
            }
            
            System.out.print("Введите размер второго массива: ");
            int size2 = scanner.nextInt();
            int[] ins = new int[size2];
            System.out.println("Введите элементы второго массива:");
            for (int i = 0; i < size2; i++) {
                System.out.print("Элемент " + (i + 1) + ": ");
                ins[i] = scanner.nextInt();
            }
         
            System.out.print("Введите позицию для вставки (0-" + size1 + "): ");
            int pos = scanner.nextInt();

            
            if (pos < 0 || pos > size1) {
                System.out.println("Некорректная позиция!");
                return;
            }
            
            int[] result = t.add(arr, ins, pos);
            
            System.out.print("Результат: [");
            for (int i = 0; i < result.length; i++) {
                System.out.print(result[i]);
                if (i < result.length - 1) {
                    System.out.print(", ");
                }
            }
            System.out.println("]");

        } catch (Exception e) {
            System.out.println("Ошибка ввода! Введите целые числа.");
        }

        try { // 4.7
            
            System.out.print("Введите размер массива: ");
            int size = scanner.nextInt();

            if (size <= 0) {
                System.out.println("Размер массива должен быть положительным!");
                return;
            }

            int[] arr = new int[size];
            System.out.println("Введите элементы массива:");
            for (int i = 0; i < size; i++) {
                System.out.print("Элемент " + (i + 1) + ": ");
                arr[i] = scanner.nextInt();
            }
            
            int[] reversed = t.reverseBack(arr);

            
            System.out.print("Исходный массив: [");
            for (int i = 0; i < arr.length; i++) {
                System.out.print(arr[i]);
                if (i < arr.length - 1) System.out.print(", ");
            }
            System.out.println("]");

            System.out.print("Реверсированный массив: [");
            for (int i = 0; i < reversed.length; i++) {
                System.out.print(reversed[i]);
                if (i < reversed.length - 1) System.out.print(", ");
            }
            System.out.println("]");

        } catch (Exception e) {
            System.out.println("Ошибка ввода! Введите целые числа.");
        }

        try { // 4.9
            
            System.out.print("Введите размер массива: ");
            int size = scanner.nextInt();

            if (size <= 0) {
                System.out.println("Размер массива должен быть положительным!");
                return;
            }

            int[] arr = new int[size];
            System.out.println("Введите элементы массива:");
            for (int i = 0; i < size; i++) {
                System.out.print("Элемент " + (i + 1) + ": ");
                arr[i] = scanner.nextInt();
            }

            System.out.print("Введите число для поиска: ");
            int x = scanner.nextInt();

            int[] indices = t.findAll(arr, x);

            System.out.print("Исходный массив: [");
            for (int i = 0; i < arr.length; i++) {
                System.out.print(arr[i]);
                if (i < arr.length - 1) System.out.print(", ");
            }
            System.out.println("]");

            System.out.print("Индексы числа " + x + ": [");
            for (int i = 0; i < indices.length; i++) {
                System.out.print(indices[i]);
                if (i < indices.length - 1) System.out.print(", ");
            }
            System.out.println("]");

            if (indices.length == 0) {
                System.out.println("Число " + x + " не найдено в массиве.");
            }

        } catch (Exception e) {
            System.out.println("Ошибка ввода! Введите целые числа.");
        }


    }
}

